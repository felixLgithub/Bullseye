import turtle
import random
t = turtle.Turtle()
t.penup()
n = 1


for p in range(10):
  k = random.randint(1, 4)
  if k == 1:
    c = "red"
  elif k == 2:
    c = "blue"
  elif k == 3:
    c = "black"
  elif k == 4:
    c = "orange"

  t.color(c)
  t.begin_fill()
  t.circle(200 - 20*n)
  t.end_fill()
  t.setpos(0,20*n)
  n = n + 1


